generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  createdAt DateTime @default(now())
  content   String?
  published Boolean  @default(false)
  authorId  Int
  user      User     @relation(fields: [authorId], references: [id])
}

model Profile {
  id     Int     @default(autoincrement()) @id
  bio    String?
  userId Int     @unique
  user   User    @relation(fields: [userId], references: [id])
}

model User {
  id      Int      @default(autoincrement()) @id
  name    String?
  email   String   @unique
  posts    Post[]
  profile Profile?
  cart Cart?
}

model Comments {
  id Int @default(autoincrement()) @id
  text String
}

model Cart {
  id Int @default(autoincrement()) @id
  items Item[]
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
}

model Item {
  id Int @default(autoincrement()) @id
  text String
}
